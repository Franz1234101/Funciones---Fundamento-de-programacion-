#include <iostream>
using namespace std;

void leerCoeficientes(float &A, float &B, float &C, float &D, float &E, float &F);
void calcularSolucion(float A, float B, float C, float D, float E, float F, float &x, float &y);
void mostrarResultado(float x, float y);

int main() {
    float A, B, C, D, E, F;
    float x, y;

    leerCoeficientes(A, B, C, D, E, F);
    calcularSolucion(A, B, C, D, E, F, x, y);
    mostrarResultado(x, y);

    return 0;
}

void leerCoeficientes(float &A, float &B, float &C, float &D, float &E, float &F) {
    cout << "Ingrese los coeficientes A, B y C de la primera ecuacion (Ax + By + C = 0): ";
    cin >> A >> B >> C;
    cout << "Ingrese los coeficientes D, E y F de la segunda ecuacion (Dx + Ey + F = 0): ";
    cin >> D >> E >> F;
}

void calcularSolucion(float A, float B, float C, float D, float E, float F, float &x, float &y) {
    float det = A * E - B * D;
    if (det == 0) {
        cout << "El sistema no tiene solucion unica." << endl;
        x = y = 0;
    } else {
        x = (B * F - C * E) / det;
        y = (C * D - A * F) / det;
    }
}

void mostrarResultado(float x, float y) {
    cout << "La solucion del sistema es:" << endl;
    cout << "x = " << x << endl;
    cout << "y = " << y << endl;
}
