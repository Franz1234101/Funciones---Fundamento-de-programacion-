#include <iostream>
#include <string>
#include <cmath>
using namespace std;

int binarioADecimal(string binario);
string leerBinario();
void mostrarResultado(string binario, int decimal);

int main() {
    string binario;
    int decimal;

    binario = leerBinario();
    decimal = binarioADecimal(binario);
    mostrarResultado(binario, decimal);

    return 0;
}

string leerBinario() {
    string bin;
    cout << "Ingrese un numero binario: ";
    cin >> bin;
    return bin;
}

int binarioADecimal(string binario) {
    int decimal = 0;
    int n = binario.length();
    for (int i = 0; i < n; i++) {
        if (binario[i] == '1')
            decimal += pow(2, n - i - 1);
        else if (binario[i] != '0') {
            cout << "Error: caracter invalido en el numero binario." << endl;
            return -1;
        }
    }
    return decimal;
}

void mostrarResultado(string binario, int decimal) {
    if (decimal != -1)
        cout << "El numero binario " << binario << " equivale a decimal " << decimal << endl;
}
