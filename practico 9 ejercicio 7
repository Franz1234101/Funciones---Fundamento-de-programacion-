#include <iostream>
using namespace std;

unsigned long long Combinatorio(int n, int r);
void leerDatos(int &n, int &r);
void mostrarResultado(int n, int r, unsigned long long resultado);

int main() {
    int n, r;
    unsigned long long resultado;

    leerDatos(n, r);
    resultado = Combinatorio(n, r);
    mostrarResultado(n, r, resultado);

    return 0;
}

void leerDatos(int &n, int &r) {
    cout << "Ingrese el valor de n: ";
    cin >> n;
    cout << "Ingrese el valor de r: ";
    cin >> r;
}

unsigned long long Combinatorio(int n, int r) {
    if (r > n) return 0;
    if (r == 0 || r == n) return 1;
    if (r > n - r) r = n - r; // usar simetr√≠a C(n,r) = C(n,n-r)

    unsigned long long resultado = 1;
    for (int i = 1; i <= r; i++) {
        resultado = resultado * (n - i + 1) / i;
    }
    return resultado;
}

void mostrarResultado(int n, int r, unsigned long long resultado) {
    cout << "Combi(" << n << ", " << r << ") = " << resultado << endl;
}
